{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/graphql",
      "dest": "http://localhost:5000/graphql"
    },
    { 
      "src": "/(.*)", 
      "dest": "/frontend/dist/index.html" 
    }
  ],
  "rewrites": [
    { 
      "source": "/(.*)", 
      "destination": "/frontend/dist/index.html" 
    }
  ]
}